@{
    ViewData["Title"] = "Back Office";
}

<div class="btn-group mb-4" role="group" aria-label="Basic example">
    <button type="button" class="btn btn-primary" onclick="loadPartialView('AddTransgressorPartial')">Aggiungi nuovo trasgressore</button>
    <button type="button" class="btn btn-primary" onclick="loadPartialView('AddVerbalPartial')">Aggiungi nuovo verbale</button>
</div>

<div id="partialContainer"></div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function loadPartialView(action) {
            $.ajax({
                url: '@Url.Action("Index")/' + action,
                type: 'GET',
                success: function (result) {
                    $('#partialContainer').html(result);
                },
                error: function (xhr, status, error) {
                    console.error('Errore durante il caricamento della partial view: ', status, error);
                }
            });
        }

        $(document).ready(function () {
            loadPartialView('AddTransgressorPartial');
        });
    </script>
}
